from abc import ABC, abstractmethod

class ControlSystem(ABC):
    @abstractmethod
    def get_errors(self):
        pass
    
    @abstractmethod
    def get_damages(self):
        pass

    @abstractmethod
    def get_correction(self):
        pass

    @abstractmethod
    def reset(self):
        pass

    @abstractmethod
    def validate_sensor(self):
        pass